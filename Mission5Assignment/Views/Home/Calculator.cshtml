@{
    ViewData["Title"] = "Tutoring Calculator";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="~/img/favicon.ico" type="image/x-icon">
</head>
<body>
    <header>
        <h1>Tutoring Fee Calculator</h1>
    </header>

    <main>
        <section>
            <label for="hours">Enter number of hours:</label>
            <input type="number" id="hours" min="1" placeholder="Enter hours" required>
            <br />
            <br />

            <label for="rate">Hourly Rate:</label>
            <input type="text" id="rate" value="25" readonly>
            <br />
            <br />

			<button id="calculate">Calculate Total</button>
            <br />
            <br />

            <label for="total">Total Cost ($):</label>
			<input type="text" id="total" readonly>

            <br />
            <br />

            <nav>
                <a asp-controller="Home" asp-action="Index">Back to Home</a>
            </nav>
            
            
        </section>
    </main>

    <footer>
        <p>&copy; 2025 Camden Taylor - Mission 5 Assignment</p>
        
    </footer>

	<script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/calculator.js"></script>
	
</body>
</html>
